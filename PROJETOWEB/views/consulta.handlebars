<div class="container text-center">
    <div class="row">
        <div class="col-1">&nbsp;</div>
        <div class="col bg-primary">
            <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                    <lord-icon
                      src="https://cdn.lordicon.com/ailnzwyn.json"
                      trigger="loop"
                      delay="100"
                      colors="primary:#ffffff,secondary:#ffffff"
                      style="width:32px;height:32px">
                    </lord-icon>
                    
                    SISTEMA WEB </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active" aria-current="page" href="/">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-1">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-1">&nbsp;</div>
        <div class="col bg-white">&nbsp;</div>
        <div class="col-1">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-1">&nbsp;</div>
        <div class="col bg-white">
            <p class="text-start fs-5">Cadastrar - Agendamento de Potenciais Clientes</p>
            <p class="text-start fs-6">Sistema Utilizado para agendamento de serviços.</p>
            <p>
            <div class="container text-center">
                <div class="row bg-primary">
                    <div class="col text-light">Nome</div>
                    <div class="col text-light">Telefone</div>
                    <div class="col text-light">Origem</div>
                    <div class="col text-light">Data de Contato</div>
                    <div class="col text-light">Observação</div>
                    <div class="col text-light">Ações</div>
                </div>
                <div class="row">
                    <div class="col text-light">&nbsp;</div>
                    <div class="col text-light">&nbsp;</div>
                    <div class="col text-light">&nbsp;</div>
                    <div class="col text-light">&nbsp;</div>
                    <div class="col text-light">&nbsp;</div>
                    <div class="col text-light">&nbsp;</div>
                </div>
            {{#each posts}}
                {{#dataValues}}
            <div class="row">
                    <div class="col text-dark">{{nome}}</div>
                    <div class="col text-dark">{{telefone}}</div>
                    <div class="col text-dark">{{origem}}</div>
                    <div class="col text-dark">{{data_contato}}</div>
                    <div class="col text-dark">{{observacao}}</div>
                    <div class="col text-dark">
                        <a href="/editar/{{id}}" title="Editar">
                            <lord-icon
                            src="https://cdn.lordicon.com/exymduqj.json"
                            trigger="hover"
                            state="hover-line"
                            style="width:40px;height:40px">
                             </lord-icon>
                        </a>
                        <a href="/excluir/{{id}}" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir este item?')">
                          <lord-icon
                             src="https://cdn.lordicon.com/hwjcdycb.json"
                             trigger="hover"
                             state="morph-trash-in"
                             style="width:40px;height:40px">
                          </lord-icon>
                        </a>
                    </div>
                </div>
                {{/dataValues}}
                {{/each}}
                </div>
            </p>
        </div>
        <div class="col-1">&nbsp;</div>
    </div>
</div>